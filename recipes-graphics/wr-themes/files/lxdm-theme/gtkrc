{
        font_name="Sans 12"
        fg[NORMAL] = "#9E9D9B"
        engine "pixmap"
        {
                image
                {
                        function = FLAT_BOX
                        file="shade.png"
                        stretch=TRUE
                        detail="eventbox"
                }
        }
}

widget "lxdm" style "back"
widget "lxdm.*.time" style "time"
