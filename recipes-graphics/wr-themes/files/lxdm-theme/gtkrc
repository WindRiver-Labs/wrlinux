style "back"
{
	engine "pixmap"
	{
		image
		{
			function = FLAT_BOX
			shadow=NONE
			state = NORMAL
			file="%DEFAULT_BACKGROUND%"
			stretch=TRUE
			detail = "base"
		}
	}
}

style "time"
{
	fg[NORMAL]="#ffffff"
	font_name="Sans 12"
}

style "prompt"
{
	fg[NORMAL]="#ffffff"
	font_name="Sans Bold 14"
}

