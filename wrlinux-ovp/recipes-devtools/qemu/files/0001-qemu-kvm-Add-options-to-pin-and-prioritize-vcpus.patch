index 32c00478..75190f9c 100644
--- a/softmmu/vl.c
+++ b/softmmu/vl.c
@@ -3514,6 +3514,9 @@ void qemu_init(int argc, char **argv, char **envp)
                     exit(1);
                 }
                 break;
+            case QEMU_OPTION_vcpu:
+                vcpu_parse(optarg);
+                break;
             case QEMU_OPTION_vnc:
                 vnc_parse(optarg, &error_fatal);
