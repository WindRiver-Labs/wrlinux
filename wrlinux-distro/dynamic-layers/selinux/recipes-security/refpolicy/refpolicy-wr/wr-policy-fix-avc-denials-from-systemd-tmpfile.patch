  avc: denied { read } for pid=92 comm="systemd-tmpfile" \
  name="kmod.conf" dev="tmpfs" ino=8660 \
  scontext=system_u:system_r:systemd_tmpfiles_t:s0-s15:c0.c1023 \
  tcontext=system_u:object_r:var_run_t:s0 \
