TOPDIR=${CUTDIR-/opt/cut/}
. $TOPDIR/function.sh

clean()
{
	echo "Clean System..."
	rm -rf lsb-test-pam-2.0-2.src.rpm
	echo "Finish"
}

echo "******Install RPM******"
rpm -ivh $TOPDIR/resource/lsb-test-pam-2.0-2.src.rpm
check "lsb-test-pam-2.0-2.src.rpm can not be installed"

echo "******Update RPM******"
rpm -Uvh $TOPDIR/resource/lsb-test-pam-2.0-2.src.rpm
check "lsb-test-pam-2.0-2.src.rpm update fail"

result PASSED
